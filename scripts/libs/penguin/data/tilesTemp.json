{
    "tiles": {
        "BlankTile": {
            "args": {
                "cost": "$10",
                "value": "no resources generated",
                "sprite": "/images/blankTile.jpg"
            },
            "prototype":{
                "TryPurchase": { 
                    "args": "player",
                    "body": "Penguin.ResourceManager.GetCount(player, 'BlankTile', 'Tiles.BlankTile.prototype.MakePurchase')",
                    "eval": "true"
                },
                "MakePurchase": {
                    "args": "args",
                    "eval": "true",
                    "body": "if(args.purchaseAvailable){Penguin.ResourceManager.UpdateCount(args.player, 'Cash', -10); return true;} else{return false;}"
                },
                "PurchaseAvailable": {
                    "args": "player",
                    "body": "if (player.Resources.Cash.GetProperty('currentCount') >= 10 && Penguin.Game.Tiles.BlankTile.prototype.Purchasable === 'true'){return true;}else {return false;}",
                    "eval": "true"
                },
                "Name": {
                    "body": "BlankTile",
                    "eval": "false"
                },
                "DisplayName": {
                    "body": "Blank Tile",
                    "eval": "false"
                },
                "Purchasable": {
                    "body": "false",
                    "eval": "false"
                }
            }
        },
        "CashMachine": {
            "args": {
                "cost": "$25",
                "value": "$.01 cash per second.",
                "sprite": "/images/cashMachine.jpg",
                "OnPurchase": "player.Resources.Cash.UpdatePerTick(.01);",
                "purchaseArgs": "player",
                "OnSale": "player.Resources.Cash.UpdatePerTick(-.01);",
                "saleArgs": "player"
            },
            "prototype":{
                "PurchasePrice": 25,
                "TryPurchase": { 
                    "args": "player",
                    "body": "Penguin.ResourceManager.GetCount(player, 'CashMachine', 'Tiles.CashMachine.prototype.MakePurchase')",
                    "eval": "true"
                },
                "MakePurchase": {
                    "args": "args",
                    "eval": "true",
                    "body": "if(args.value >= Pengion.Game.Tiles.CashMachine.prototype.PurchasePrice){Penguin.ResourceManager.UpdateCount(args.player, 'Cash', -25); Penguin.Game.Layout.FinishPurchase();}"
                },
                "PurchaseAvailable": {
                    "args": "player",
                    "body": "Penguin.ResourceManager.GetCounts(player, ['Cash'], 'Layout.RecievePurchaseOptions', [Pengion.Game.Tiles.CashMachine.prototype.PurchasePrice])",
                    "eval": "true"
                },
                "Name": {
                    "body": "CashMachine",
                    "eval": "false"
                },
                "DisplayName": {
                    "body": "Basic House",
                    "eval": "false"
                },
                "Purchasable": {
                    "body": "true",
                    "eval": "false"
                }
            }
        },
        "MediumHouse": {
            "args": {
                "cost": "$250",
                "value": "$.05 cash per second. Costs .25 water per second",
                "sprite": "/images/mediumHouse.jpg",
                "OnPurchase": "player.Resources.Cash.UpdatePerTick(.05); player.Resources.Water.UpdatePerTick(-.25);",
                "purchaseArgs": "player",
                "OnSale": "player.Resources.Cash.UpdatePerTick(-.05); player.Resources.Water.UpdatePerTick(.25);",
                "saleArgs": "player"
            },
            "prototype":{
                "Purchase": { 
                    "args": "player",
                    "body": "if(Penguin.Game.Tiles.MediumHouse.prototype.PurchaseAvailable(player)){Penguin.ResourceManager.UpdateCount(player, 'Cash',-250);player.Resources.Water.UpdateCurrentCount(-100);return true;}else{return false;}",
                    "eval": "true"
                },
                "PurchaseAvailable": {
                    "args": "player",
                    "body": "if (player.Resources.Cash.GetProperty('currentCount') >= 250 && player.Resources.Water.GetProperty('currentCount') >= 100 && player.Resources.Water.GetProperty('perTick') >= .25 && Penguin.Game.Tiles.MediumHouse.prototype.Purchasable === 'true'){return true;}else {return false;}",
                    "eval": "true"
                },
                "Name": {
                    "body": "MediumHouse",
                    "eval": "false"
                },
                "DisplayName": {
                    "body": "Medium House",
                    "eval": "false"
                },
                "Purchasable": {
                    "body": "true",
                    "eval": "false"
                }
            }
        },
        "Water": {
            "args": {
                "cost": "$1000",
                "value": "No resources generated.",
                "sprite": "/images/water.jpg",
                "OnPurchase": "player.Resources.Water.UpdateMaxCount(1000);",
                "purchaseArgs": "player",
                "OnSale": "player.Resources.Water.UpdateMaxCount(-1000);",
                "saleArgs": "player"
            },
            "prototype":{
                "Purchase": { 
                    "args": "player",
                    "body": "if(Penguin.Game.Tiles.Water.prototype.PurchaseAvailable(player)){player.Resources.Cash.UpdateCurrentCount(-1000);return true;}else{return false;}",
                    "eval": "true"
                },
                "PurchaseAvailable": {
                    "args": "player",
                    "body": "if (player.Resources.Cash.GetProperty('currentCount') >= 1000 &&  Penguin.Game.Tiles.Water.prototype.Purchasable === 'true'){return true;}else {return false;}",
                    "eval": "true"
                },
                "Name": {
                    "body": "Water",
                    "eval": "false"
                },
                "DisplayName": {
                    "body": "Water",
                    "eval": "false"
                },
                "Purchasable": {
                    "body": "true",
                    "eval": "false"
                }
            }
        }
    }
}
